<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render partial: 'info', locals: { user: @user, newbook: @newbook } %>
    </div>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table table-striped table-hover">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image , format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>