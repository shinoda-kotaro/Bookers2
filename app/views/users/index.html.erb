<%= render partial: 'info', locals: { user: @user, newbook: @newbook } %>

<h1>Users</h1>
<table>
<tr>
<th>image</th>
<th>name</th>
<th></th>
</tr>
<% @users.each do |user| %>
  <tr>
  <td>
  <%= link_to user_path(user.id) do %>
  <%= attachment_image_tag user, :profile_image , format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %>
  <% end %>
  </td>
  <td><%= user.name %></td>
  <td><%= link_to "show", user_path(user.id) %></td>
  </tr>
<% end %>
</table>