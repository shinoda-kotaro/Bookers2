<% if flash[:notice] %>
<div class="flash_notice">
  <%= flash[:notice] %>
</div>
<% end %>

<% if flash[:danger] %>
<div class="flash_danger">
  <%= flash[:danger] %>
</div>
<% end %>

<% if flash[:success] %>
<div class="flash_success">
  <%= flash[:success] %>
</div>
<% end %>

<%= render partial: 'info', locals: { user: @user, newbook: @newbook } %>

<div class="main-containts">
  <div class="user_books">
    <h1>books</h1>

    <table class="user_books">

      <tr>
        <th>By</th>
        <th>Title</th>
        <th>Body</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td>
        <%= link_to user_path(@user.id) do %>
        <%= attachment_image_tag book.user, :profile_image , format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %>
        <% end %>
        </td>
        <td><%= link_to book.title , book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>

    </table>

  </div>
</div>