<div class="side_bar">
  <div class="user_info">
    <h1>User info</h1>
    <div class="user_profile_image">
      <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100" , fallback: "no_image.jpg" %>
    </div>
    <table class="table table-striped">
      <tr>
        <div class="user_name-box">
          <td>name</td>
          <td><%= user.name %></td>
        </div>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </table>
    <% if user.id == current_user.id %>
    <%= link_to  edit_user_path(user.id) , class: "btn btn-default btn-block" do %>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    <% else %>
    <%= link_to  edit_user_path(user.id) , class: "btn btn-default btn-block" , disabled: "disabled" do %>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    <% end %>
  </div>

  <div class="new_book">
    <h1>New book</h1>

    <%= form_for(newbook, url: new_book_path(current_user.id) ) do |f| %>
    <div class="form-group">
      <%= f.label :title, "title" %>
      <%= f.text_field :title , class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body, "opinion" %>
      <%= f.text_field :body , class: "form-control" %>
    </div>
    <div class="new_book-create">
      <%= f.submit "Create Book" , class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

  </div>
</div>