<% if @user.errors.any? %>
<h4 class="error_count"><%= @user.errors.count %> errors prohibited this book from being saved:</h4>
<ul class="errors">
  <% @user.errors.full_messages.each do |message| %>
  <li class="error_message"><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>User info</h1>
      <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name , class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image_id, "Image" %>
        <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "introduction" %>
        <%= f.text_area :introduction , class: "form-control" %>
      </div>
      <%= f.submit "Update User" , class: "btn btn-block btn-primary" %>
      <% end %>
    </div>
  </div>
</div>