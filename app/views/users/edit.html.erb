<% if @user.errors.any? %>
<h4 class="error_count"><%= @user.errors.count %> errors prohibited this book from being saved:</h4>
<ul class="error_box">
  <% @user.errors.full_messages.each do |message| %>
  <li class="error_message"><%= message %></li>
  <% end %>
</ul>
<% end %>

<h1>User info</h1>
<%= form_for @user do |f| %>
<div class="edit_name">
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</div>
<div class="edit_profile_image">
  <%= f.label :profile_image_id, "Image" %>
  <%= f.attachment_field :profile_image %>
</div>
<div class="edit_introduction">
  <%= f.label :introduction, "introduction" %>
  <%= f.text_area :introduction %>
</div>
<%= f.submit "Update User" %>
<% end %>