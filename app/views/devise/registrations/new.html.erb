<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <div class="Sign_up">
        <h2>Sign up</h2>

        <div class="form-body">
          <%# -----------------------エラーメッセージ----------------------------- %>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%#---------------------------Name--------------------------- %>
          <div class="form-group">
            <label class="control-label" for="inputName">Name</label>
            <%= f.text_field :name, autofocus:true, class:"form-control", id:"inputName" %>
          </div>
          <%# ------------------------Email-------------------------- %>
          <div class="form-group">
            <label class="control-label" for="inputEmail">Email</label>
            <%= f.email_field :email, autocomplete: "email",class:"form-control", id:"inputEmail" %>
          </div>
          <%#----------------------Pass---------------------- %>
          <div class="form-group">
            <label for="inputPassword" class="control-label">Password</label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
          </div>
          <%# -------------------Pass_again-------------------- %>
          <div class="form-group">
            <label for="inputConfirmPassword" class="control-label">Passwork confirmation</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
          </div>
          <%# -------------------Submit_Button----------------------- %>
          <div class="actions">
            <%= f.submit "Sign up" , class: "btn btn-success" %>
          </div>
          <% end %>

          <%= link_to "Log in" , new_user_session_path %>

        </div>
      </div>
    </div>
  </div>
</div>