<% if flash[:success] %>
<div class="flash_success">
  <span class="text-success">
    <%= flash[:success] %>
  </span>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render partial: 'users/info', locals: { user: @user, newbook: @newbook } %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>

      <table class="table table-striped table-bover">
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @book.user , :profile_image, format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title , book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
          <td><%= link_to "Edit" , edit_book_path(@book.id) , class: "btn btn-success btn-xs" %></td>
          <td>
            <%= link_to "Destroy" , book_path(@book.id) , method: :delete, data: {confirm: "削除しますか？"} , class: "btn btn-danger btn-xs" %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>