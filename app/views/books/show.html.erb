<% if flash[:success] %>
<div class="flash_success">
  <%= flash[:success] %>
</div>
<% end %>

<%= render partial: 'users/info', locals: { user: @user, newbook: @newbook } %>

<h1>Book detail</h1>

<table>
  <tr>
    <td>
    <%= link_to user_path(@user.id) do %>
    <%= attachment_image_tag @book.user , :profile_image, format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %>
    <% end %>
    </td>
    <td><%= link_to @book.title , book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to "edit" , edit_book_path(@book.id) %></td>
    <td><%= link_to "destroy" , book_path(@book.id) , method: :delete, data: {confirm: "削除しますか？"} %></td>
    <% end %>
  </tr>
</table>