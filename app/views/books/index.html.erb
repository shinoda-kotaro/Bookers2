<% if @book.present? %>
<% if @book.errors.any? %>
<h4 class="error_count"><%= @book.errors.count %> errors prohibited this book from being saved:</h4>
<ul class="error_box">
  <% @book.errors.full_messages.each do |message| %>
  <li class="error_message"><%= message %></li>
  <% end %>
</ul>
<% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <%= render partial: 'users/info', locals: { user: @user, newbook: @newbook } %>
    </div>
    <div class="col-sm-8">
      <h1>Books</h1>
      <table class="table table-striped table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
            <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "40x40" , fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= link_to book.title , book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>